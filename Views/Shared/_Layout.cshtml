@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CobranzasPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        :root {
            --primary: #1F2B6C;
            --accent: #4F6BED;
            --bg-main: #F6F8FC;
            --bg-card: #FFFFFF;
            --text-muted: #6B7280;
        }

        body {
            margin: 0;
            display: flex;
            min-height: 100vh;
            background: var(--bg-main);
            font-family: 'Segoe UI', sans-serif;
        }

        /* SIDEBAR - Tu diseño original */
        #sidebar {
            width: 260px;
            background: #ffffff;
            border-right: 1px solid #E5E7EB;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: fixed; /* Mantiene el nav fijo a la izquierda */
            height: 100vh;
        }

        .logo-area {
            padding: 24px;
            border-bottom: 1px solid #E5E7EB;
        }

            .logo-area h4 {
                margin: 0;
                font-weight: 700;
                color: #000679;
            }

            .logo-area span {
                color: #2D35CB;
            }

            .logo-area small {
                color: #000000;
            }

        #sidebar .nav-link {
            color: #374151;
            padding: 12px 24px;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 14px;
        }

            #sidebar .nav-link:hover,
            #sidebar .nav-link.active {
                background: #EEF2FF;
                color: var(--accent);
                border-left: 4px solid var(--accent);
            }

        .sidebar-footer {
            padding: 16px 24px;
            border-top: 1px solid #E5E7EB;
            font-size: 14px;
            color: var(--text-muted);
        }

        /* CONTENT */
        #content {
            flex: 1;
            padding: 32px;
            margin-left: 260px; /* Evita que el contenido se meta debajo del sidebar */
        }

        main {
            max-width: 1400px;
            margin: auto;
        }
    </style>
</head>
<body>

    @{
        // Lógica de roles basada en tu imagen de la DB
        var rol = (Context.Session.GetString("UsuarioRol") ?? "").Trim();
        var email = Context.Session.GetString("UsuarioEmail") ?? "";
        string controladorActual = ViewContext.RouteData.Values["Controller"]?.ToString();
    }

    <nav id="sidebar">
        <div>
            <div class="logo-area">
                <h4>Cobranzas<span>Pro</span></h4>
                <small>Portal de gestión predictiva</small>
            </div>

            <div class="nav flex-column mt-2">
                @if (rol.Equals("Administrador", StringComparison.OrdinalIgnoreCase))
                {
                    <a class="nav-link @(controladorActual == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">
                        <span class="material-symbols-outlined">dashboard</span>Dashboard
                    </a>

                    <a class="nav-link @(controladorActual == "Clientes" ? "active" : "")" href="@Url.Action("Index", "Clientes")">
                        <span class="material-symbols-outlined">account_circle</span> Clientes
                    </a>

                    <a class="nav-link @(controladorActual == "Creditos" ? "active" : "")" href="@Url.Action("Index", "Creditos")">
                        <span class="material-symbols-outlined">credit_card</span> Registrar Crédito
                    </a>

                    <a class="nav-link @(controladorActual == "Cobranzas" ? "active" : "")" href="@Url.Action("Index", "Cobranzas")">
                        <span class="material-symbols-outlined">attach_money</span> Cobranzas
                    </a>
                    <a class="nav-link @(controladorActual == "Reportes" ? "active" : "")" href="@Url.Action("Index", "Reportes")">
                        <span class="material-symbols-outlined">add_chart</span> Reportes
                    </a>
                    <a class="nav-link @(controladorActual == "Configuracion" ? "active" : "")" href="@Url.Action("Index", "Configuracion")">
                        <span class="material-symbols-outlined">settings</span> Configuracion
                    </a>

                

                    @* <a class="nav-link" href="#"><span class="material-symbols-outlined">add_chart</span> Reportes</a>
                    <a class="nav-link" href="#"><span class="material-symbols-outlined">settings</span> Configuracion</a> *@
                }
                else
                {
                    <a class="nav-link @(controladorActual == "Clientes" ? "active" : "")" href="@Url.Action("Portal", "Clientes")">
                        <span class="material-symbols-outlined">account_balance_wallet</span> Mi Estado de Cuenta
                    </a>
                    <a class="nav-link" href="#"><span class="material-symbols-outlined">history</span> Historial de Pagos</a>
                    <a class="nav-link" href="#"><span class="material-symbols-outlined">support_agent</span> Soporte</a>
                }
            </div>
        </div>

        <div class="sidebar-footer">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <div class="d-flex align-items-center gap-2">
                    <span class="material-symbols-outlined">
                        @(rol.Equals("Administrador", StringComparison.OrdinalIgnoreCase) ? "admin_panel_settings" : "person")
                    </span>
                    <span class="fw-bold">@rol</span>
                </div>
                <a class="text-danger" href="@Url.Action("Salir", "Cuenta")" title="Salir">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
            <div style="font-size: 11px; color: var(--text-muted);">@email</div>
        </div>
    </nav>

    <div id="content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>