@model ProyectoIntegradorS6G7.Models.Cliente

<div class="container" style="max-width: 800px;">
    <div class="card border-0 shadow-lg rounded-4 p-4 mt-4">
        <h3 class="fw-bold text-primary mb-4"><i class="bi bi-person-plus-fill"></i> Registro de Nuevo Cliente</h3>

        <form asp-action="Crear" method="post">
            <div class="row">
                <div class="col-md-6 mb-3 text-start">
                    <label class="form-label fw-bold">RUC / Cédula</label>
                    <input asp-for="ruc" class="form-control" placeholder="17XXXXXXXX" required />
                </div>
                <div class="col-md-6 mb-3 text-start">
                    <label class="form-label fw-bold">Razón Social</label>
                    <input asp-for="razonSocial" class="form-control" placeholder="Nombre de la empresa" required />
                </div>

                <div class="col-md-12 mb-3 text-start">
                    <label class="form-label fw-bold">Correo Electrónico (Para envío de credenciales)</label>
                    <input asp-for="email" type="email" class="form-control" placeholder="cliente@empresa.com" required />
                </div>

                <div class="col-md-12 mb-3 text-start">
                    <label class="form-label fw-bold">Contacto Principal (Nombre)</label>
                    <input asp-for="contactoPrincipal" class="form-control" placeholder="Persona encargada" required />
                </div>
                <div class="col-md-6 mb-3 text-start">
                    <label class="form-label fw-bold">Teléfono / Celular</label>
                    <input asp-for="telefono" class="form-control" placeholder="099XXXXXXX" />
                </div>
                <div class="col-md-6 mb-3 text-start">
                    <label class="form-label fw-bold">Estado Inicial</label>
                    <select asp-for="estado" class="form-select">
                        <option value="Activo">Activo</option>
                        <option value="Mora">En Mora</option>
                        <option value="Inactivo">Inactivo</option>
                    </select>
                </div>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary py-2 fw-bold" style="background: linear-gradient(90deg, #1f2b6c, #4f6bed);">
                    GUARDAR Y CREAR ACCESO
                </button>
                <a asp-action="Index" class="btn btn-light">Cancelar</a>
            </div>
        </form>
    </div>
</div>