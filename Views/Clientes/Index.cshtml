@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show rounded-4 shadow-sm border-0" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@model IEnumerable<ProyectoIntegradorS6G7.Models.Cliente>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm p-3 text-center rounded-4">
                <small class="text-muted">Clientes totales</small>
                <h2 class="fw-bold text-primary">@Model.Count()</h2>
                <small>Clientes registrados</small>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm p-3 text-center rounded-4">
                <small class="text-muted">Clientes en Mora</small>
                <h2 class="fw-bold text-danger">@Model.Count(c => c.estado == "Mora")</h2>
                <small>Clientes con adeudo</small>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mb-3">
        <form asp-action="Index" method="get" class="input-group w-50">
            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
            <input type="text" name="buscar" class="form-control border-start-0"
                   placeholder="Buscar por Razón Social o RUC..." value="@ViewData["FiltroActual"]">
            <button type="submit" class="btn btn-outline-primary border-start-0">Buscar</button>
        </form>

        <a asp-action="Crear" class="btn btn-primary px-4 rounded-3" style="background-color: #4F6BED;">
            <i class="bi bi-plus-lg"></i> NUEVO CLIENTE
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr class="text-muted" style="font-size: 12px; text-transform: uppercase;">
                        <th class="ps-4">RUC</th>
                        <th>Razón Social</th>
                        <th>Contacto Principal</th>
                        <th>Saldo Pendiente</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody style="font-size: 14px;">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-muted">@item.ruc</td>
                            <td><span class="fw-bold text-primary">@item.razonSocial</span></td>
                            <td>@item.contactoPrincipal</td>
                            <td class="fw-bold text-danger">@item.saldoPendiente.ToString("C")</td>
                            <td>
                                <span class="badge @(item.estado == "Mora" ? "bg-danger-subtle text-danger" : "bg-success-subtle text-success") px-3">
                                    @item.estado
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Eliminar" asp-route-id="@item.id"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('¿Seguro que deseas eliminar este cliente?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                    <a asp-action="Detalles" asp-route-id="@item.id" class="btn btn-sm btn-primary" style="background-color: #4F6BED;">
                                        VER DETALLE
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>